#!/bin/bash
# http://www.gnu.org/server/mirror.html

SOURCE='{{ gnu_mirror_source }}'
DESTINATION='{{ mirror_doc_root }}/gnu/'

LOCKFILE=/tmp/$(basename ${DESTINATION}).lock


if [[ ! -e $LOCKFILE ]]; then
    touch $LOCKFILE
    timeout 1d rsync -rvltpHS \
          --human-readable    \
          --progress          \
          --safe-links        \
          --delete-after      \
          --delay-updates     \
          --delete-excluded   \
          --exclude '.~tmp~'  \
          --itemize-changes   \
          --timeout=10800     \
          ${SOURCE} ${DESTINATION}

    if [[ $? -eq 0 ]]; then
        echo `date +%s` > {{ mirror_timestamp_dir }}/gnu
    fi

    rm $LOCKFILE
else
    cat <<EOF 1>&2
ERROR: Another rsync is already running and has the lock file
$LOCKFILE.

EOF

fi
